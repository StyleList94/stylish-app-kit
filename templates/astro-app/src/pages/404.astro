---
import RootLayout from '@/layouts/root.astro';
---

<RootLayout>
  <div class="error-container">
    <div class="error-content">
      <h2 class="error-code">404</h2>
      <h3 class="error-message">Not Found</h3>
    </div>

    <div class="error-actions">
      <a href="/" class="main-page-link"> Go to Main Page </a>
    </div>
  </div>
</RootLayout>

<style>
  .error-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 3rem;
    width: 100%;
    max-width: 500px;
    height: 100vh;
    margin: 0 auto;
    padding: 4rem 1.5rem;
    color: #000;
  }

  .error-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .error-code {
    font-size: 1.125rem;
    margin: 0;
  }

  .error-message {
    font-size: 1.5rem;
    margin: 0;
  }

  .error-actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .main-page-link {
    color: #0066cc;
    text-decoration: underline;
    font-size: 1.125rem;
    padding: 0.5rem 1rem;
  }

  @media (prefers-color-scheme: dark) {
    .error-container {
      color: #fff;
    }
  }
</style>
